{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "clean": "rimraf \"**/build\" \"**/.nyc_output\" \"**/coverage\" \"**/docs\"",
    "coverage-report": "run coverage-report",
    "docs": "run docs",
    "extended-test": "run extended-test",
    "lint": "run lint",
    "lint:fix": "run lint:fix",
    "test": "run test",
    "test:coverage": "run test:coverage",
    "watch": "chokidar '**/*.ts' '**/*.js' '**/*.json' '**/*.yml' '**/*.yaml' -i '**/node_modules/**/*' -i 'packages/*/build/**/*' -i '**/.nyc_output' -i '**/coverage/**/*' -i '**/docs/**/*' --silent -c 'clear && nx run-many --target=build'"
  },
  "devDependencies": {
    "@changesets/cli": "2.23.1",
    "@esdmr/scripts": "workspace:1.0.0",
    "chokidar-cli": "3.0.0",
    "nx": "14.5.6",
    "rimraf": "3.0.2",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^14.0.0",
      "istanbul-lib-processinfo": "^2.0.3"
    },
    "packageExtensions": {
      "eslint-import-resolver-webpack": {
        "peerDependenciesMeta": {
          "webpack": {
            "optional": true
          }
        }
      }
    }
  }
}
