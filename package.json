{
  "name": "@esdmr/remap-tsc",
  "version": "0.0.0",
  "description": "Map TypeScript compiler source files to output files and vice versa",
  "homepage": "https://github.com/esdmr/remap-tsc#readme",
  "bugs": "https://github.com/esdmr/remap-tsc/issues",
  "repository": "https://github.com/esdmr/remap-tsc",
  "license": "MIT",
  "author": "Saeed M Rad <esdmr0@gmail.com> (https://github.com/esdmr)",
  "type": "module",
  "exports": "./build/index.js",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/index.js",
    "build/index.d.ts"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:examples": "pnpm link . && tsc -b examples",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "clean": "rimraf build .nyc_output coverage",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepack": "node scripts/prepack.js",
    "postpack": "node scripts/postpack.js",
    "test": "tap",
    "test:coverage": "c8 tap",
    "test:coverage-html": "c8 report -r html",
    "test:coverage-lcov": "c8 report -r lcov",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@changesets/cli": "2.23.1",
    "@types/mock-fs": "4.13.1",
    "@types/node": "14.18.21",
    "@types/semver": "7.3.10",
    "@types/tap": "15.0.7",
    "c8": "7.11.3",
    "execa": "6.1.0",
    "mock-fs": "5.1.2",
    "rimraf": "3.0.2",
    "semver": "7.3.7",
    "tap": "16.3.0",
    "tsconfig-type": "1.25.0",
    "typescript": "4.7.4",
    "xo": "0.50.0"
  },
  "peerDependencies": {
    "typescript": "4.7.x"
  },
  "packageManager": "pnpm@6.32.3",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^14.0.0",
      "istanbul-lib-processinfo": "^2.0.3"
    },
    "packageExtensions": {
      "eslint-import-resolver-webpack": {
        "peerDependenciesMeta": {
          "webpack": {
            "optional": true
          }
        }
      }
    }
  }
}
