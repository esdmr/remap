{
  "name": "@esdmr/remap-tsc",
  "version": "0.0.0",
  "description": "Map TypeScript compiler source files to output files and vice versa",
  "keywords": [
    "typescript"
  ],
  "homepage": "https://github.com/esdmr/remap#readme",
  "bugs": "https://github.com/esdmr/remap/issues",
  "repository": "https://github.com/esdmr/remap",
  "license": "MIT",
  "author": "Saeed M Rad <esdmr0@gmail.com> (https://github.com/esdmr)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "require": "./build/index.cjs",
      "import": "./build/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "build/index.cjs",
  "types": "build/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "src/**/*.ts",
    "build/**/*.js",
    "build/**/*.cjs",
    "build/**/*.d.ts",
    "build/**/*.map",
    "!build/test/**/*",
    "!build/examples/**/*"
  ],
  "scripts": {
    "build": "node scripts/build.js --tsc",
    "build:dev": "node scripts/build.js --tsc --dev",
    "docs": "typedoc src/index.ts",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepack": "node scripts/prepack.js",
    "postpack": "node scripts/postpack.js",
    "test": "tap",
    "test:coverage": "c8 tap",
    "test:coverage-html": "c8 report -r html",
    "test:coverage-lcov": "c8 report -r lcov",
    "watch": "node scripts/build.js --tsc --watch"
  },
  "devDependencies": {
    "@types/mock-fs": "4.13.1",
    "@types/node": "14.18.21",
    "@types/semver": "7.3.10",
    "@types/tap": "15.0.7",
    "c8": "7.11.3",
    "esbuild": "0.14.48",
    "execa": "6.1.0",
    "mock-fs": "5.1.2",
    "readdirp": "3.6.0",
    "semver": "7.3.7",
    "tap": "16.3.0",
    "tsconfig-type": "1.25.0",
    "typedoc": "0.23.8",
    "typescript": "4.7.4",
    "xo": "0.50.0"
  },
  "peerDependencies": {
    "typescript": "4.7.x"
  },
  "engines": {
    "node": ">=14"
  }
}
